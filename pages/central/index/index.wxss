page {
  margin: 0;
  padding: 0;
}

.toolBar {
  position: sticky;
  top: 0;
  z-index: 1;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  padding: 10rpx 10rpx;
  margin-bottom: 20rpx;
}

.search-item {
  /* margin: 0 10rpx; */
  /* background-color: pink; */
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
  border-top: 1rpx solid grey;
  border-bottom: 1rpx solid grey;
}

.search-item .d_name {
  font-size: 50rpx;
  font-weight: bold;
}

.search-item .d_addr,.d_rssi,.d_connectable{
  font-size: 35rpx;
  font-weight: lighter;
}

.search-item .s-i-right {
  display: flex;
  justify-content: center;
  align-items: center;
  /* background-color: red; */
}

.search-item .connect-icon {
  width: 100rpx;
  height: 100rpx;
}

.gotopBtn {
  position: fixed;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 54rpx;
  font-weight: bold;
  width: 60px;
  height: 60px;
  background-color: lightblue;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Toastbox style */
.toast-box {
  width: 100%;
  height: 100%;
  /* opacity: 1; */
  opacity: 0.5;
  position: fixed;
  top: 0px;
  left: 0px;
  background-color: pink;
}

.showToast {
  position: absolute;
  opacity: 1;
  width: 70%;
  margin-left: 15%;
  margin-top: 40%;
}

.toast-title {
  padding-left: 5%;
  background-color: #2196f3;
  color: white;
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
}

.toast-main {
  padding-top: 2vh;
  padding-bottom: 2vh;
  background-color: white;
  text-align: center;
}

.toast-button-container {
  margin: 0;
  padding: 0;
  width: 100%;
  display: flex;
  background-color: white;
  color: red;
  border-radius:  0 0 10px 10px;
  justify-content: center;
  align-items: center;
}

.toast-button {
  background-color: lightgreen;
}

